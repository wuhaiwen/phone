<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="拦截规则">
    <SwitchPreference
        android:background="@drawable/switch_thumb"
        android:key="switch_reject"
        android:summary="reject_style"
        android:title="@string/settings_open_reject" />
    <PreferenceScreen
        android:key="white_list"
        android:summary="无"
        android:title="@string/settings_white_list" />
    <PreferenceScreen
        android:key="black_list"
        android:summary="自定义"
        android:title="@string/settings_black_list" />

    <PreferenceScreen
        android:key="device_camera_back"
        android:summary="短信内容"
        android:title="短信设置" />

    <PreferenceScreen
        android:key="reject_mode"
        android:summary="全部拦截"
        android:title="@string/settings_reject_mode" />

    <PreferenceScreen android:layout="@layout/layout_contacts_item" />


    <PreferenceCategory android:title="@string/settings_open_reject">

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_open_reject">

        <EditTextPreference
            android:dialogTitle="@string/settings_open_reject"
            android:key="edittext_preference"
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject" />

        <ListPreference
            android:dialogTitle="@string/settings_open_reject"
            android:entries="@array/entries_str"
            android:entryValues="@array/entries_values_str"
            android:key="list_preference"
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_open_reject">

        <!-- This PreferenceScreen tag sends the user to a new fragment of
             preferences.  If running in a large screen, they can be embedded
             inside of the overall preferences UI. -->
        <PreferenceScreen
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject">
            <!-- Arbitrary key/value pairs can be included for fragment arguments -->
            <extra
                android:name="someKey"
                android:value="somePrefValue" />
        </PreferenceScreen>

        <!-- This PreferenceScreen tag sends the user to a completely different
             activity, switching out of the current preferences UI. -->
        <PreferenceScreen
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.android.com" />

        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_open_reject">

        <CheckBoxPreference
            android:key="parent_checkbox_preference"
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject" />

        <!-- The visual style of a child is defined by this styled theme attribute. -->
        <CheckBoxPreference
            android:dependency="parent_checkbox_preference"
            android:key="child_checkbox_preference"
            android:layout="?android:attr/preferenceLayoutChild"
            android:summary="@string/settings_open_reject"
            android:title="@string/settings_open_reject" />

    </PreferenceCategory>

</PreferenceScreen>